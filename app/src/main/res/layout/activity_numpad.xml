<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumpadActivity">

    <LinearLayout
        android:id="@+id/alpha"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/startBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/start_name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/numkey_vertical_margins"
            android:gravity="center"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numkey_vertical_margins"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numkey_vertical_margins"

            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numkey_vertical_margins"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="9" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numkey_vertical_margins"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btnd"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="*"/>

            <Button
                android:id="@+id/btn0"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="0" />


            <Button
                android:id="@+id/btndd"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:text="#" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>